<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://kit.fontawesome.com/8d24a6e83f.js" crossorigin="anonymous"></script>
    <!-- CSS de Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/stylesArticle.css" />
  </head>
  <body>
    <section id="section-header"><%- include("partials/navbar") %></section>
    <div class="container-fluid d-flex flex-column mt-5 p-5">
      <div class="d-flex justify-content-between align-items-center">
        <div><h3>Articles</h3></div>

        <div>
          <a id="btn-nuevo" href="http://localhost:3000/articulos/crear" class="btn btn-success"
            >Nuevo</a
          >
        </div>
      </div>
      <div class="justify-content-center align-items-center">
        <table id="articlesTable" class="table table-secondary table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Título</th>
              <th scope="col">Contenido</th>
              <th scope="col">Imagen</th>
              <th scope="col">Fecha de publicación</th>
              <th scope="col">Autor</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% for (const article of articles) { %>
            <tr>
              <td><%= article.id %></td>

              <td><%= article.title %></td>

              <td id="content"><%= article.content %></td>

              <td>Imagen</td>

              <td><%= article.createdAt %></td>

              <td><%= article.author.firstname %> <%= article.author.lastname %></td>

              <td>
                <div class="d-flex flex-row m-2 justify-content-center">
                  <div class="ms-2">
                    <a href="/articulos/<%= article.id %>/editar" class="btn btn-primary">
                      Modificar
                    </a>
                  </div>
                  <div class="ms-2">
                    <form method="POST" action="/articulos/<%=article.id%>?_method=DELETE">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                  </div>
                </div>
              </td>
              <% } %>
            </tr>
          </tbody>
        </table>
      </div>
      <section id="section-footer"><%- include("partials/footer") %></section>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
